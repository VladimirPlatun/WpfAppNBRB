<Window
    x:Class="WpfAppNBRB.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfAppNBRB"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <StackPanel>

        <Button
            Width="200"
            Height="50"
            Margin="5"
            Padding="0"
            Click="OpenCurrencyWindow_Click">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                TextWrapping="Wrap">
                Открыть окно для просмотра всех валют
            </TextBlock>
        </Button>
        <Button
            Width="200"
            Height="50"
            Margin="5"
            Padding="0"
            Click="OpenRateWindow_Click">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                TextWrapping="Wrap">
                Открыть окно для получение списка доступных иностранных валют за указанный период"
            </TextBlock>
        </Button>


    </StackPanel>
</Window>
